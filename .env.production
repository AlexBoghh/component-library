# Production Environment Variables
NODE_ENV=production
NEXT_PUBLIC_APP_ENV=production
NEXT_PUBLIC_API_URL=https://api.radix-ui-lab.com

# Production Optimizations
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# Feature Flags (Production)
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_DEVTOOLS=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITOR=false
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.radix-ui-lab.com
NEXT_PUBLIC_IMAGE_DOMAINS=cdn.radix-ui-lab.com,images.unsplash.com

# Build Configuration
# These will be set during build time
# NEXT_PUBLIC_BUILD_ID=
# NEXT_PUBLIC_BUILD_TIME=
